    {
      "version": "0.2.0",
      "configurations": [
        {
          "type": "node",
          "request": "launch",
          "name": "Debug NestJS Framework",
          "skipFiles": [
            "<node_internals>/**"
          ],
          "preLaunchTask": "npm: build", // or "yarn: build" if using yarn
          "program": "${workspaceFolder}/src/main.ts",
          "console": "integratedTerminal",
          "restart": true,
          "envFile": "${workspaceFolder}/.env"
        }
      ]
    }